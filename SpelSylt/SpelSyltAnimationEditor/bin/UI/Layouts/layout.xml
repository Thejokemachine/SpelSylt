<layout>
	<panel name="bg" width="800" height="600" color="20,50,100" image="whiteBox">
		<panel name="gradient" width="800" height="600" color="#FFFFFF24" image="gradient"/>
		<panel width="350" height="350" color="50,50,50" x="15" y="15" image="whiteBox">
			<panel name="controller" width="350" height="35" dock="bottom" image="whiteBox" color="50,50,50"  y="35">
				<button name="play_btn" width="30" height="30" dock="vcenter" x="20" y="-5" image="playButton"/>
			</panel>
			<panel name="clip_image" width="330" height="330" dock="center" color="225,225,255" image="whiteBox">
				<text string="No clip :(" dock="center" align="center" font="arial" text_color="#a1b2cc"/>
			</panel>
		</panel>
		<panel name="settings" width="770" height="160" y="-20" dock="bottom|hcenter" image="whiteBox" color="#00000050">
			<button name="speed_val" dock="vcenter|left" width="50" height="35" image="whiteBox" x="100" color="#FFFFFF">
				<text string="Speed:" dock="vcenter" align="vcenter|right" x="-5" font="arial" size="24"/>
			</button>
		</panel>
	</panel>
</layout>